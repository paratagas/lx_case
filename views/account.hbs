{{#if userEmail}}
    <header>
        <div class="container" id="maincontent" tabindex="-1">
            <div class="row">
                <div class="col-lg-12">
                    {{#if userPhoto}}
                        <img class="img-responsive" src="/images/{{ userPhoto }}" alt="">
                    {{/if}}
                    <div class="intro-text">
                        <hr class="star-light">
                        <span class="skills">Welcome {{ userEmail }}</span>
                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <a href="/logout" class="btn btn-lg btn-danger" role="button">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
{{/if}}

<!-- Portfolio Grid Section -->
